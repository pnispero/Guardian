#=================================================================#
# Template file: guardian_nc_tolerance_data.template
# Database for control tolerance PVs within sxrss for the guardian
# Uses guardian_tolerance_data.substitutions
# Macro description:                                                   #
#   - NAME       : Name                                                #
#   - DESC       : Description                                         #
#   - ID         : ASYN ID                                             #
#=====================================================================

record(ao, "$(NAME):TOL") { 
    # Removed _TOL, will be replaced in the substgitutions file itself
    field(DESC, "$(DESC)")
    field(PINI, "YES")
    field(EGU, "$(EGU)")
    field(PREC, "$(PREC)")
    field(DTYP, "asynFloat64")
    field(OMSL, "closed_loop") # TODO: TEMP field for testing
    field(DOL, "$(NAME):TEST:TOL CPP") # # TODO: TEMP field for testing
    field(ASG, "MCC")
    field(OUT, "@asyn(GUARDIAN, $(ID), 0)TOLERANCE_NC") 
    info(autosaveFields, "VAL")
}

record(ai, "$(NAME):TOL_RBV") {
    field(DESC, "$(DESC)")    
    field(EGU, "$(EGU)")
    field(PREC, "$(PREC)")
    field(DTYP, "asynFloat64")
    field(SCAN, "I/O Intr")
    field(INP, "@asyn(GUARDIAN, $(ID), 0)TOLERANCE_NC")
}
